# This file serves as a template for the required environment variables.
# Copy this file to a new file named .env and fill in your actual values.
# The .env file is ignored by git and should not be committed to the repository.

# -------------------------------------
# -- Application Settings
# -------------------------------------
# The environment the application is running in. (e.g., development, staging, production)
ENV=development

# -------------------------------------
# -- Server Configuration
# -------------------------------------
# The port the HTTP server will listen on.
PORT=8080

# Server timeouts (e.g., 5s, 1m, 2h)
SERVER_READ_TIMEOUT=5s
SERVER_WRITE_TIMEOUT=10s
SERVER_IDLE_TIMEOUT=1m
SERVER_SHUTDOWN_TIMEOUT=30s
SERVER_GRACEFUL_SHUTDOWN=true

# -------------------------------------
# -- Database Configuration
# -------------------------------------
# Data Source Name (DSN) for connecting to your PostgreSQL database.
# Replace with your actual user, password, host, and database name.
DB_DSN=postgres://postgres:postgres@localhost:5432/ecommerce?sslmode=disable

# Database connection pool settings
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_CONN_MAX_LIFETIME=5m
DB_CONN_MAX_IDLE_TIME=5m

# -------------------------------------
# -- JWT Authentication
# -------------------------------------
# A long, random, and secret string used to sign JWTs.
# IMPORTANT: Change this to a secure random string in your actual .env file for production.
JWT_SECRET=default-secret-change-in-production

# Duration for which tokens are valid.
JWT_ACCESS_DURATION=15m
JWT_REFRESH_DURATION=168h # 7 days

# -------------------------------------
# -- Request Timeouts
# -------------------------------------
# Specific timeouts for different groups of routes.
TIMEOUT_AUTH=10s
TIMEOUT_USER_OPS=15s
TIMEOUT_PROTECTED=8s
TIMEOUT_DATABASE=5s

# -------------------------------------
# -- CORS (Cross-Origin Resource Sharing)
# -------------------------------------
# Comma-separated list of allowed origins. Use '*' for public access (not recommended for production).
CORS_ALLOW_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Comma-separated list of allowed HTTP methods.
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS

# Comma-separated list of allowed HTTP headers.
CORS_ALLOW_HEADERS=Accept,Authorization,Content-Type,X-CSRF-Token

# Allow frontend to read cookies from the response.
CORS_ALLOW_CREDENTIALS=true

# -------------------------------------
# -- Database Seeder Configuration
# -------------------------------------
# The credentials for the default admin user created by the 'make seed' command.
# IMPORTANT: Change these default values.
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=supersecretpassword